        "print('Original Text') \n",
        "print(\"-------------\")       \n",
        "print(reviews,'\\n\\n')\n",
        "\n",
        "print('Text after removing stop words')\n",
        "print('------------------------------')\n",
        "reviews_after_stopwords= (' '.join(lst)) #joing all the individual strings\n",
        "print(reviews_after_stopwords)"
