    {
      "cell_type": "code",
      "source": [
        "sentence_score = {}\n",
        "for sentence in sent_tokens:\n",
        "  for word in sentence.lower():\n",
        "    if word in word_value.keys():\n",
        "      if len(sentence.split(' '))< 30:\n",
        "        if sentence not in sentence_score.keys():\n",
        "          sentence_score[sentence] = word_value[word]\n",
        "        else:\n",
        "            sentence_score[sentence] +=word_value[word]\n",
        "sentence_score\n"
